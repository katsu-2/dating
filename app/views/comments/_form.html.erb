<%= form_with(model: [@post, @post.comments.build],
local: true) do |f| %>
  <div class="comment-body">
    <%= f.text_area :content, class: "form-control com-main", rows: 4 ,placeholder: "アドバイスをする" %>
  </div>
  <div class="actions">
    <%= f.submit "アドバイスする", class: "btn-adv" %>
  </div>
<% end %>
