<h2>Edit <%= resource_name.to_s.humanize %></h2>

<div class="container">
<div class="new-user-form">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="img-body form-group">
    <% if @user.img? %>
      <%= image_tag @user.img.url %>
    <% else %>
      <%= image_tag("/assets/user-img.png", :class => "prof_icon" ,:size => "200x200",:alt => "プロフ画像") %>
    <% end %>
  </div>
  <%= f.file_field :img %>


  <div class="form-group">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "名前", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
  </div>

  <div class="user-age user-edit form-group ">
    <h6>
    <%= f.label :年齢 %>
    <%= f.number_field :age, autofocus: true, autocomplete: "age", class: "form-control"%>
   </h6>
  </div>

  <div class="user-gender user-edit form-group">
    <p></p>
    <%= f.label :性別 %>
    <h6>
    <%= f.label :男 %>
    <%= f.radio_button :gender, :男%>
    <%= f.label :女 %>
    <%= f.radio_button :gender, :女 %>
    </h6>
  </div>

  <div class="user-myself user-edit form-group ">
    <h6>
    <%= f.label :自己紹介 %>
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", rows: 4 ,class: "form-control" %>
    </h6>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :パスワード %> <i>(変更しない場合は空欄にして下さい)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %>文字以上</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :パスワードの確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :現在のパスワード %> <i>(変更には現在のパスワードが必要です。)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
</div>
</div>
<%= link_to "Back", :back %>
