
<div class="container">
<div class="row edit-profile-wrapper">
  <div class="col-sm-12 col-md-4 col-lg-4 left-col">
    <div class="user-edit-group">
      <h5 class="list-title">ユーザー編集</h5>
      <div class="img-body form-group">
        <% if @user.img? %>
          <%= image_tag @user.img.url %>
        <% else %>
          <%= image_tag("/assets/user-img.png", :class => "prof_icon" ,:size => "200x200",:alt => "プロフ画像") %>
        <% end %>
      </div>
      <div class="edit-under-link">
      <p>
        <%= link_to 'ログアウト', destroy_user_session_path,
        class: "edit-log", method: :delete, data: { confirm: "本当にいいですか？"} %>
      </p>
      <p>
        <%= link_to '戻る', user_path(@user), class: "edit-back" %>
      </p>
     </div>
    </div>
  </div>

  <div class="col-sm-12 col-md-8 col-lg-8 right-col">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <div class="row username-img">
        <div class="col-sm-3 text-right">
        </div>
        <div class="col-sm-9">
          <p><%= @user.name %></p>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :名前, class:"col-form-label text-right font-weight-bold"%>
        <%= f.text_field :name, autonfocus: true, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス, class: "col-form-label text-right font-weight-bold" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="user-gender user-edit form-group">
        <p></p>
        <%= f.label :性別 %>
        <h6>
          <%= f.label :男 %>
          <%= f.radio_button :gender, :男%>
          <%= f.label :女 %>
          <%= f.radio_button :gender, :女 %>
        </h6>
      </div>

      <div class="user-age user-edit form-group ">
        <h6>
          <%= f.label :年齢 %>
          <%= f.number_field :age, autofocus: true, autocomplete: "age", class: "form-control"%>
        </h6>
      </div>

      <div class="user-myself user-edit form-group ">
        <h6>
          <%= f.label :自己紹介 %>
          <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", rows: 4 ,class: "form-control" %>
        </h6>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group row">
        <%= f.label :password, class: " col-form-label text-right font-weight-bold" %>
        <div class="col-sm-9">
          <%= f.password_field :password, autocomplete: "off", class:"form-control col-sm-9",
          placeholder: "Leave blank if you don't want to change it"%>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, class: " col-form-label text-right font-weight-bold"  %>
        <div class="col-sm-9">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control col-sm-9" %>
        </div>
      </div>

      <div class="form-group row">
        <div class=""></div>
        <div class="col-sm-9">
          <%= f.submit "Update", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>
