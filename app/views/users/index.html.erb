<h2>ユーザー一覧</h2>


<div class="container con-index">
  <div class="row">
      <% @users.each do |user| %>
      <div class="user-index-box">
        <div class="user-index-name">
          <%= link_to user.name, user_path(id: user.id), class: "user-body" %>
        </div>
        <div class="user-index-gender">
          <%= user.gender %>
        </div>
        <div class="user-index-introduction">
          <%= user.introduction %>
        </div>
      </div>
      <% end %>
  </div>
</div>
