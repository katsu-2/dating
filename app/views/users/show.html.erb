<div class="container">
  <div class="user-profile">
    <h2>ユーザー詳細ページ</h2>
    <div class="row show-all">
      <div class="col-lg-4">
        <div class="row">
          <div class="user-img col-sm-12 col-md-10">
            <div class="img-head">
              <h5><%= @user.name %></h5>
            </div>
            <div class="img-body">
              <% if @user.img? %>
                <%= image_tag @user.img.url %>
              <% else %>
                <%= image_tag("/assets/user-img.png", :class => "prof_icon" ,:size => "200x200",:alt => "プロフ画像") %>
              <% end %>
            </div>
          </div>

          <div class="user-info col-sm-12 col-md-10 ">
            <div class="user-name">
              <p></p>
              <label>居住地</label>
              <%= @user.prefecture %>
            </div>
            <div class="user-age">
              <p></p>
              <label>年齢</label>
              <%= @user.age %>
            </div>
            <div class="user-myself">
              <p></p>
              <label>自己紹介</label>
              <%= @user.introduction %>
            </div>
            <% if @user == current_user %>
              <%= link_to '編集する', edit_user_path(@user) %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="user-posted col-sm-12 col-md-10 col-lg-8">
        <div class="user-posted-info">
          <h3>全投稿</h3>
        </div>
      </div>
    </div>

  </div>
</div>
