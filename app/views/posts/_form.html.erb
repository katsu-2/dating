
<%= form_for (@post) do |f| %>

<p>
  <%= f.label :タイトル %><br />
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :依頼内容 %><br />
  <%= f.text_area :text %>
</p>

<p>
  <%= f.label :画像 %><br />
  <%= f.file_field :img, id: :book_img %>
</p>

<p>
  <%= f.check_box :remove_img %>
  画像の削除
</p>
  <%= f.hidden_field :img_cache %>

<p>
  <%= f.submit %>
</p>

<% end %>
